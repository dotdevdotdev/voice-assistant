{
  "name": "voice-assistant-electron",
  "version": "1.0.0",
  "description": "A voice assistant application built with Electron",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "Your Name",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
